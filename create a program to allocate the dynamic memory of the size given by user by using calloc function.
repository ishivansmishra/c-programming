#include<stdio.h>
#include<stdlib.h>

// create a program to allocate the dynamic memory of the size given by user by using calloc function.

int main (){
    int *ptr;
    int n;
    printf("Enter The value of N : ");
    scanf("%d",&n);

    ptr = (int*)calloc(n,sizeof(int));

    for(int i = 0;i<=n;i++){
        printf("%d",ptr[i]);
    }

    return 0;
}
