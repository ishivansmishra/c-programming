#include <stdio.h>
#include<math.h>

int power(int a,int b){
    if(b==0){
        return 1;
    }
    return a*power(a,b-1);
}

int main()
{
    int a;
    printf("Enter the Value of A : ");
    scanf("%d",&a);

    int b;
    printf("Enter the Value of b : ");
    scanf("%d",&b);

    printf("%d to the power %d is : %d",a,b,power(a,b));


    return 0;
}
