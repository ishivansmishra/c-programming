#include<stdio.h>
// Triangle type checker;
int main () {
   int angle1;
   printf("Enter angles1: ");
   scanf("%d", &angle1);

   int angle2;
   printf("enter angle2 : ");
   scanf("%d",&angle2);
    
    int angle3;
   printf("enter angle3 : ");
   scanf("%d",&angle3);



    if (angle1 + angle2 + angle3 == 180){
        printf("The angles formed a triangle.\n");

        if(angle1==angle2 && angle2==angle3 ){
            printf("This is an Equilateral Triangle");
        } else if (angle1 == angle2 || angle2 == angle3 || angle3 == angle1){
            printf("This is an Isosceles Triangle");
        } else {
            printf("This is a scalene Triangle");
        }
    } else {
        printf("Invalid \n please enter a valid angle");
    }
                return 0;
}         
