#include<stdio.h>
// Print pyramid of numbers in loop.
int main (){
    int rows;
    printf("Enter numbers : ");
    scanf("%d",&rows);

    for(int i = 1;i<=rows;i++){
        for(int j = 1;j<=rows-i;j++){
            printf(" ");
        }
        for(int j = 1;j<=i;j++){
            printf("%2d ",j);
        }
        for(int j = i-1;j>=1;j--){
            printf("%2d ",j);
        }
        printf(" \n");
    }
    return 0;
}
  
